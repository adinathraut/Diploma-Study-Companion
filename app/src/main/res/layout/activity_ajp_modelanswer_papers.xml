<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".osy_modelanswer_papers">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="394dp"
                android:layout_height="75dp"
                android:weightSum="1">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_modelanswer_papers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="50dp"
                    android:outlineSpotShadowColor="@color/black"
                    android:outlineAmbientShadowColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="#C9B5F8"
                    app:cardCornerRadius="18dp">
                    <LinearLayout

                        android:layout_width="329dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"

                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/answer"></ImageView>

                        <TextView
                            android:gravity="center_vertical"

                            android:layout_width="270dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="47dp"
                            android:text="Model Answer Papers"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="150dp"
                android:text="Advanced Java Paper is Conducted Online by MSBTE "
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textAlignment="center"
                android:text="For Referance Check Question Bank Section."
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <TableLayout

            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="394dp"
                android:layout_height="75dp"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_ajpquestionbank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="50dp"
                    android:outlineSpotShadowColor="@color/black"
                    android:outlineAmbientShadowColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="90dp"
                    app:cardBackgroundColor="#C9B5F8"
                    app:cardCornerRadius="18dp">


                    <LinearLayout

                        android:layout_width="329dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"

                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/question"></ImageView>

                        <TextView
                            android:gravity="center_vertical"

                            android:layout_width="270dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="55dp"
                            android:text="Question Banks"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </TableRow>
        </TableLayout>

    </LinearLayout>

</ScrollView>