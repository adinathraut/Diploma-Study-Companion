<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_homepage_contribute"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:text=" Contribute !"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help us to serve you better....!"
        android:textStyle="bold"
        android:textSize="15dp"


        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/contribute"
        android:layout_gravity="center"
        ></pl.droidsonroids.gif.GifImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collecting the question papers and necessary study material for every department id extremely hard and a difficult task. We would need your help and contribution in making the student community better."

        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-condensed-light"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send us question papers, study materials that you have access to, we will make it available for all the other needy students.....!"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed-light"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We will acknowledge the students who send us the study material by adding their name in front of their contribution in our app."
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed-light"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Be Giving, Enjoy Sharing...! ðŸ¤"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed-light"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ‘‡ Contribute Using ðŸ‘‡"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_marginTop="5dp"
        >


        <Button
            android:id="@+id/btn_email"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:autoLink="email"
            android:textAllCaps="false"
            android:text="diplomahelper.official@gmail.com" />

        <Button
            android:textAlignment="center"
            android:textAllCaps="false"
            android:id="@+id/btn_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="Google Form" />

    </LinearLayout>


    </LinearLayout>


</ScrollView>