<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.polyak.iconswitch.IconSwitch

            android:layout_marginTop = "5dp"
            android:layout_alignParentTop = "true"
            app:isw_icon_left = "@drawable/light_mode"
            app:isw_icon_right = "@drawable/dark_mode"
            app:isw_background_color = "#2196F3"
            app:isw_thumb_color_left = "#FFC107"
            app:isw_thumb_color_right = "#0C0101"
            app:isw_inactive_tint_icon_left = "#FFEB3B"
            app:isw_inactive_tint_icon_right = "#100A0A"
            app:isw_active_tint_icon_left = "#FFFFFF"
            app:isw_active_tint_icon_right = "#FFFFFF"
            android:id = "@+id/iconSwitch"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_centerHorizontal = "true"
            android:layout_centerVertical = "true"
            app:isw_default_selection = "left"
            app:isw_icon_size = "20dp"
            android:layout_gravity="center"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv_choosesem"
            app:cardBackgroundColor="#FFFFFF"
            app:cardElevation="16dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="14dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="@drawable/et_bg_border_text"

                >

                <TextView
                    android:id="@+id/tv_choosesem"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=" Choose Semester !"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>


    <TableLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/cv_home_semester_one"
                app:cardBackgroundColor="@color/lightpurple"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_column="1"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp"
                    >


                    <ImageView

                        android:id="@+id/img_home_semester_one"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/student"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_home_semester_one"
                        android:text="Semester One"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"

                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/cv_home_semester_two"
                app:cardBackgroundColor="@color/lightpurple"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_column="2"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp"
                    >


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/img_home_semester_two"
                        android:src="@drawable/student"
                        android:layout_gravity="center"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_home_semester_two"
                        android:text="Semester Two"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"

                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/cv_home_semester_three"
                app:cardBackgroundColor="@color/lightpurple"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_column="1"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp"
                    >


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/img_home_semester_three"
                        android:src="@drawable/student"
                        android:layout_gravity="center"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_home_semester_three"
                        android:text="Semester Three"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"

                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/cv_home_semester_four"
                app:cardBackgroundColor="@color/lightpurple"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_column="2"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp"
                    >


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/img_home_semester_four"
                        android:src="@drawable/student"
                        android:layout_gravity="center"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_home_semester_four"
                        android:text="Semester Four"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"

                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/cv_home_semester_five"
                app:cardBackgroundColor="@color/lightpurple"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_column="1"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp"
                    >


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/img_home_semester_five"
                        android:src="@drawable/student"
                        android:layout_gravity="center"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_home_semester_five"
                        android:text="Semester Five"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"

                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/cv_home_semester_six"
                app:cardBackgroundColor="@color/lightpurple"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_column="2"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp"
                    >


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/img_home_semester_six"
                        android:src="@drawable/student"
                        android:layout_gravity="center"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_home_semester_six"
                        android:text="Semester Six"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"

                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </TableRow>


    </TableLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_msbte_website"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="16dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="14dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@drawable/et_bg_border_text"

            >

            <TextView
                android:id="@+id/tv_msbtewebsite"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=" MSBTE Official Website"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:textStyle="bold"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView


            android:id="@+id/cv_msbte_resulte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/et_bg_border_text"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/tv_msbteresult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text=" MSBTE Results"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>